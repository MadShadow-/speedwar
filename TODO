function EMS.Tools.EntityType_SetMaxHealthPoints(_entityType, _healthPoints)
	S5Hook.GetRawMem(9002416)[0][16][_entityType * 8 + 2][13]:SetInt(_healthPoints);
end
S5Hook.GetRawMem(9002416)[0][16][ _eType * 8 + 2][103]:SetInt(200) setzt Defense, abgesehen von Defense durch Techs, die zählt extra drauf
function EMS.Tools.EntityType_SetWorkerAmount(_entityType, _amount)
	S5Hook.GetRawMem(9002416)[0][16][_entityType * 8 + 2][42]:SetInt(_amount);
end

function EMS.Tools.EntityType_SetDisplayModel(_entityType, _model)
	S5Hook.GetRawMem(9002416)[0][16][_entityType * 8 + 3][2]:SetInt(_model)
end
